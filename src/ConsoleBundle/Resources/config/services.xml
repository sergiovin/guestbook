<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="translation.extractor.annotation.class">ConsoleBundle\System\Translation\AnnotationExtractor</parameter>
    </parameters>

    <services>
        <service id="translation.extractor.annotation" class="%translation.extractor.annotation.class%">
            <tag name="translation.extractor" alias="annotation" />
        </service>
     </services>
</container>